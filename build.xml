<?xml version="1.0" encoding="UTF-8"?>

<project basedir="." default="package" name="HeatMapImage">
 <property name="dirOffset" value="../" />
<import file="${dirOffset}/commontargets.xml" />
	

<target depends="init" description="Creates installable zip file" name="create-zip">
		<antcall target="prezip"/>
		<zip destfile="${dest.dir}/${ant.project.name}.zip" whenempty="fail">
			<fileset dir=".">
				<exclude name="*.doc"/>
				<exclude name="*.pl"/>
				<exclude name="lib/**"/>
			</fileset>
			<fileset dir="lib">
				<include name="*.jar"/>
			</fileset>
		</zip>
		<antcall target="postzip"/>
	</target>


</project>
