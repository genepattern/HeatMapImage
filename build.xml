<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." default="create-zip" name="HeatMapImage">

<property name="has-dependency" value="HierarchicalClusteringViewer"/>


<property name="dirOffset" value="../" />
<import file="${dirOffset}/commontargets.xml" />


	<target name="create-zip" depends="init">
		<antcall target="prezip"/>
		<zip destfile="${dest.dir}/${ant.project.name}.zip" whenempty="fail">
			<fileset dir=".">
				<exclude name="*.doc"/>
				<exclude name="build.xml"/>
			</fileset>
			<fileset dir="${libpath}">
				<include name="file_support.jar"/>
				<include name="ui_support.jar"/>
				<include name="gp-common.jar"/>
				<include name="colt.jar"/>
				<include name="trove.jar"/>
				<include name="jaxb-rt-1.0-ea.jar"/>
			</fileset>
			<fileset dir="../HierarchicalClusteringViewer">
				<include name="*.jar"/>
			</fileset>
			<fileset dir="../HierarchicalClusteringViewer/lib" />
	
		</zip>
		<antcall target="postzip"/>
	</target>

</project>

